                    <a class="navbar-brand" href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i>My Home</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            <a class="tag_menu" href="@Url.Action("Index", "Home")">Trang chủ</a>
                        </li>
                        <li>
                            <a class="tag_menu" href="@Url.Action("Index", "Property")">Nhà bán</a>
                        </li>
                        <li>
                            <a class="tag_menu" href="@Url.Action("Index", "Contact")">Liên hệ</a>
                        </li>
                        <li>
                            <a class="tag_menu" href="@Url.Action("Index", "Booked")">Giỏ hàng</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>

                            @if (Session["ID"] != null)
                            {
                            <li>
                                <a class="tag_menu" href="#" data-toggle="dropdown" role="button" aria-expanded="false">Xin chào, @Session["Username"]<span class="caret"></span></a>
