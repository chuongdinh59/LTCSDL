                                    <li><a href="@Url.Action("Infor", "User")">Thông tin cá nhân</a></li>
                                    <li><a href="@Url.Action("MySchedule", "User")">Lịch của tôi</a></li>
                                    <li><a href="@Url.Action("Logout", "Logout")"><i class="fa-solid fa-arrow-right-from-bracket"></i> Đăng xuất </a></li>
                                </ul>
                            </li>

                        }
                        else
                        {
                            <a class="tag_menu" href="@Url.Action("Login", "LogIn")">Đăng nhập/Đăng ký</a>
                        }

                            </li>

                            <li>
                                <a class="tag_menu button_1 mgt" href="@Url.Action("Create", "Property")">Thêm ký gửi</a>
                            </li>
                        </ul>

                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </section>

        @RenderBody()
        <section id="footer">
            <div class="container">
                <div class="row">
                    <div class="footer_1 clearfix">
                        <div class="col-sm-3">
                            <div class="footer_1i1 clearfix">
                                <h4 class="mgt col">About Us</h4>
                                <p class="col_2">This My Template is a team of young professionals that has been successfully creating Creative Website templates already for several years.</p>
                                <h5><a class="button col_2" href="#"><i class="fa-brands fa-google-play"></i>Google Store</a></h5>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="footer_1i1 clearfix">
                                <h4 class="mgt col">Useful Links</h4>
